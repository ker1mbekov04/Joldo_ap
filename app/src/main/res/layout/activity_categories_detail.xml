<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0D1F6BB8">

    <!-- Заголовок видео -->
    <TextView
        android:id="@+id/znakTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название знака"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium" />

    <!-- Картинка превью (опционально) -->
    <ImageView
        android:id="@+id/znakThumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/znakTitle"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bicycle"
        android:elevation="4dp"
        android:background="@drawable/round_back_white10" />

    <!-- Описание видео -->
    <TextView
        android:id="@+id/znakDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание видео. Здесь будет подробное описание содержимого видео, чтобы пользователь мог понять, о чем оно."
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_below="@id/znakThumbnail"
        android:layout_marginTop="16dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="sans-serif-medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/znakDescription"
        android:layout_marginTop="257dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/buttonPrevious1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад" />

        <Button
            android:id="@+id/buttonNext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Вперед" />
    </LinearLayout>

    <!-- Кнопка для просмотра видео -->

</RelativeLayout>
