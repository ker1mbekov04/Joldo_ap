<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0D1F6BB8">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1F6BBB"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/levo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Категории:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/cat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Предупреждающие"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/round_back_white10"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/cat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Приоритета"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/round_back_white10"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/cat3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запрещающие"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/round_back_white10"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/cat4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Предписывающие"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/round_back_white10"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/cat5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Особых предписаний"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/round_back_white10"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>



</LinearLayout>
